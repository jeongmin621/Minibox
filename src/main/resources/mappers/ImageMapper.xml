<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jmk.movie.mappers.ImageMapper">
    <insert id="insertImage"
            useGeneratedKeys="true"
            keyProperty="index"
            keyColumn="index"
            parameterType="com.jmk.movie.entities.ImageEntity">
        INSERT INTO `mega`.`images` (`data`, `content_type`, `name`)
        VALUES (#{data}, #{contentType}, #{name})
    </insert>
    <select id="selectImageByIndex"
            resultType="com.jmk.movie.entities.ImageEntity">
        SELECT `index` AS `index`,
               `data` AS `data`,
               `content_type` AS `contentType`,
               `name` AS `name`
        FROM `mega`.`images`
        WHERE `index` = #{index}
        LIMIT 1
    </select>

</mapper>